<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title 1"
        android:textAppearance="@style/TextAppearance.Title1" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title 2"
        android:textAppearance="@style/TextAppearance.Title2"
        app:layout_constraintTop_toBottomOf="@id/title1" />

    <TextView
        android:id="@+id/subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtitle 1"
        android:textAppearance="@style/TextAppearance.Subtitle1"
        app:layout_constraintTop_toBottomOf="@id/title2" />

    <TextView
        android:id="@+id/subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtitle 2"
        android:textAppearance="@style/TextAppearance.Subtitle2"
        app:layout_constraintTop_toBottomOf="@id/subtitle1" />

    <TextView
        android:id="@+id/body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textAppearance="@style/TextAppearance.Body1"
        app:layout_constraintTop_toBottomOf="@id/subtitle2" />

    <TextView
        android:id="@+id/body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textAppearance="@style/TextAppearance.Body2"
        app:layout_constraintTop_toBottomOf="@id/body1" />

    <TextView
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textAppearance="@style/TextAppearance.Caption"
        app:layout_constraintTop_toBottomOf="@id/body2" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Button"
        android:text="SAVE"
        app:layout_constraintTop_toBottomOf="@id/caption"/>

</android.support.constraint.ConstraintLayout>